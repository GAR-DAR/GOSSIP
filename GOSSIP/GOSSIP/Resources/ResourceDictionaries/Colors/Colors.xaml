<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background -->

    <LinearGradientBrush x:Key="GradientBackground" StartPoint="0,0" EndPoint="0,5">
        <GradientStop Color="#1a1625" Offset="0.0" />
        <GradientStop Color="#2f2b3a" Offset="0.5" />
    </LinearGradientBrush>


    <!-- Foreground -->

    <SolidColorBrush x:Key="WindowForeground" Color="#FFF" />

    <!-- Window Border -->

    <SolidColorBrush x:Key="WindowBorder" Color="#1a1625" />
    
    <!-- Top Menu Bar -->

    <SolidColorBrush x:Key="TopMenuBackground" Color="#002552"/>

    <!-- SignUp Button Colour -->

    <SolidColorBrush x:Key="SignInButtonBackground" Color="#01467c"/>

    <SolidColorBrush x:Key="LogInButtonBackground" Color="#6393c9"/>

    <SolidColorBrush x:Key="DarkestBlue" Color="#000d1f"/>

    
</ResourceDictionary>