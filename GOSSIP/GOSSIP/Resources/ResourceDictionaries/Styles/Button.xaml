    <Style x:Key="Reply" TargetType="Button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="{DynamicResource Danube}"/>
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrussianBlue}"/>
        <Setter Property="Content" Value="Reply"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="15"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="15">
                        <!-- Заокруглення -->
                        <ContentPresenter HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource PrussianBlue}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Danube}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="CreateChat" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="buttonBorder" Background="{DynamicResource PrussianBlueWithoutOpacity}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Іконка -->
                            <Image Source="pack://application:,,,/Resources/Images/AddChat.png" Width="25" Margin="5"/>
                            <!-- Текст -->
                            <TextBlock Text="New Chat" FontSize="25" VerticalAlignment="Center" Margin="5" Foreground="White" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Тригер на наведення -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="{DynamicResource Danube}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="TabControlProfileButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="15" 
                        BorderThickness="2" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        Cursor="Hand">
                        <TextBlock Foreground="White" 
                               Text="{TemplateBinding Content}" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="16"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="{StaticResource PrussianBlue}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Danube}"/>

        <Style.Triggers>
            <DataTrigger Binding="{Binding IsProfileSelected}" Value="True">
                <Setter Property="Background" Value="{StaticResource Danube}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PrussianBlue}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" x:Key="TabControlSettingsButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                    CornerRadius="15" 
                    BorderThickness="2" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    Cursor="Hand">
                        <TextBlock Foreground="White" 
                           Text="{TemplateBinding Content}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontSize="16"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="{StaticResource PrussianBlue}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Danube}"/>

        <Style.Triggers>
            <DataTrigger Binding="{Binding IsSettingsSelected}" Value="True">
                <Setter Property="Background" Value="{StaticResource Danube}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PrussianBlue}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>